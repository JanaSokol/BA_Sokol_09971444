load "/home/jana/anaconda3/envs/ncl_stable/lib/ncarg/nclscripts/csm/gsn_code.ncl"
load "/home/jana/anaconda3/envs/ncl_stable/lib/ncarg/nclscripts/csm/gsn_csm.ncl"
load "/home/jana/anaconda3/envs/ncl_stable/lib/ncarg/nclscripts/wrf/WRFUserARW.ncl"


begin

;---- Load file
  filename = "/home/jana/Documents/GitHub/BA_Sokol_09971444/WRF/WRF-ARW/run/GFS/wrfout_d01_2021-11-23_00:00:00.nc"
  a        = addfile(filename,"r")

;---- Set variables
  title = "GFS Temperature"

; type = "x11"
  type = "png"
  wks = gsn_open_wks(type,title)


;---Read values needed
  tc = wrf_user_getvar(a,"T2",-1)
  tc = tc - 273.15
  tc@units = "C"
  hgt = wrf_user_getvar(a,"HGT",-1)

pltres = True
mpres = True

pltres@lbLabelStride = 2

opts = True
opts@cnFillOn = True
contour_tc = wrf_contour(a,wks,tc,opts)
delete(opts)

opts = True
opts@cnLineDashPattern = 3 ;
contour_hgt = wrf_contour(a,wks,hgt,opts)
delete(opts)

plot = wrf_map_overlays(a,wks,(/contour_tc,contour_hgt/),pltres,mpres)

end





load "/home/jana/anaconda3/envs/ncl_stable/lib/ncarg/nclscripts/csm/gsn_code.ncl"
load "/home/jana/anaconda3/envs/ncl_stable/lib/ncarg/nclscripts/csm/gsn_csm.ncl"
load "/home/jana/anaconda3/envs/ncl_stable/lib/ncarg/nclscripts/wrf/WRFUserARW.ncl"


begin

;---- Load file
  filename = "/home/jana/Documents/GitHub/BA_Sokol_09971444/WRF/WRF-ARW/run/GFS/wrfout_d01_2021-11-25_00:00:00.nc"
  a        = addfile(filename,"r")

;---- Set variables
  title = "GFS Temperature"

; type = "x11"
  type = "png"
  wks = gsn_open_wks(type,title)

;---Read values needed
  tc = wrf_user_getvar(a,"T2",0)
  tc = tc - 273.15
  tc@units = "C"
  hgt = wrf_user_getvar(a,"HGT",0)


res                       = True
res@gsnDraw               = False
res@gsnFrame              = False

res@mpDataBaseVersion     = "MediumRes"
res@mpOutlineBoundarySets = "AllBoundaries"

res@mpMinLatF             = 46
res@mpMaxLatF             = 49.5
res@mpMinLonF             =  9
res@mpMaxLonF             = 18

res@mpOutlineOn           = True
res@mpFillOn              = False  
res@mpNationalLineThicknessF = 3.0

res@tiMainString          = "Original NCL map outlines"

map = gsn_csm_map(wks,res)

mpres = True

opts = True
opts@cnFillOn = True
contour_tc = wrf_contour(a,wks,tc,opts)
delete(opts)


plot = wrf_map_overlays(a,wks,(/contour_tc/),mpres,res)


end



